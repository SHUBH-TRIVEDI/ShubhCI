@using CI_Platform1.Models
@model RegistrationViewModel

<head>
    <link rel="stylesheet" href="~/css/registration.css" asp-append-version="true">


    <title>Registration Page</title>
</head>
<body class="example">
    <div class="container-fluid pl-0">
        <div class="row ">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 ">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">

                    <div class="carousel-inner">
                        @foreach (var i in Model.banners)
                        {
                            @if (i.SortOrder == 1)
                            {
                                <div class="carousel-item active" data-bs-interval="5000">
                                    <img src="@i.Image" class="d-block w-100 carousel-img object-fit-none" alt="...">
                                    <div class="carousel-caption d-none d-md-block ">
                                        <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                        <p>
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item " data-bs-interval="5000">
                                    <img src="@i.Image" class="d-block w-100 carousel-img object-fit-none" alt="...">
                                    <div class="carousel-caption d-none d-md-block ">
                                        <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                        <p>
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                            }
                        }


                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-10
                justify-content-center align-self-center right_div">
                <form asp-controller="Home" asp-action="Registration">
                    <div class="mb-5 text-danger">@ViewBag.Email</div>
                    <div class="mb-5 text-danger">@ViewBag.password</div>

                    <div class="ridiv">

                        <label asp-for="FirstName" class="form-label ">First Name</label>
                        <input asp-for="FirstName" type="text" placeholder="evan" class="form-control shadow-none" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div>
                    <div class="">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" type="text" placeholder="donohue" class="form-control shadow-none" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div>
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" type="text" placeholder="8866123456" value="" class="form-control shadow-none" required>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </div>
                    <div>
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control shadow-none" placeholder="Enter Your Email" id="exampleInputEmail1" aria-describedby="emailHelp" required>
                        <div id="emailHelp" class="form-text"></div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Password" class="form-label" required>Password</label>
                        <input asp-for="Password" placeholder="Enter a Password" type="password"
                               class="form-control shadow-none">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Password" for="exampleInputEmail1" class="form-label" required>
                            Confirm Password
                        </label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm Your Password" type="password" class="form-control shadow-none">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" value="login" class="btn
                        btn-outline-success mt-2 shadow-none bgchange">
                        Register
                    </button>

                    <div class="text-center mt-1">
                        Already registered? <a asp-action="Login" asp-controller="Home" class="text-black  text-decoration-none"> Login Now</a>
                    </div>

                    <div class=" policy mt-2 text-secondary text-center">
                        <a asp-action="Privacy" asp-controller="Home" class="text-decoration-none text-secondary">Privacy Policy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

