@using CI_Entities1.Models.ViewModel
@model AdminVM

<div class="fs-4">
    Mission Theme
</div>

<div class="row">
    <hr class="col-3" style="border: 2px solid black;">
    <hr class="col-9">
</div>

<div class="button-row mb-3">
    <div class=" start-btn">

        <input class="form-control me-2 shadow-none xyz" id="myInputTextField" type="search" placeholder="Search" aria-label="Search">
    </div>

    <div class="end-btn">
        <button class="btn btn-outline-warning rounded-pill px-3 py-0 me-2 shadow-none"><i class="bi bi-plus-lg "></i> <span class="btn-label">Add</span></button>

    </div>
</div>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Theme Name</th>
            <th>Status</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var theme in Model.missionThemes)
        {
            <tr id="application">
                <td>@theme.Title</td>
                <td>@theme.Status</td>

                <td>
                    <span>
                        <button class="btn shadow-none" onclick="ThemeEdit(@theme.MissionThemeId)">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                    </span>
                    <span>
                        <button class="btn shadow-none" onclick="ThemeDelete(@theme.MissionThemeId)">
                            <i class="bi bi-trash"></i>
                        </button>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function ThemeEdit(id)
    {
        $.ajax({
            url: '/Admin/Admin/ThemeEdit',
            type: 'GET',
            data: {'id':id },
            success: function (res) {
                console.log(res);
                $("#UserModal").html($(res).find("#UserModal").html());
            },
            error: function (res) {
                console.log(res);
                alert("Modal error");
            }
        });
    }

    function ThemeDelete(id)
    {
        $.ajax({
            url: '/Admin/Admin/ThemeDelete',
            type: 'GET',
            data: {'id':id }
        });
    }
</script>