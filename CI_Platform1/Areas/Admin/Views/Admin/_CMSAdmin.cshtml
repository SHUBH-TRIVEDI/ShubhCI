<div class="button-row mb-3">
    <div class=" start-btn">

        <input class="form-control me-2" id="myInputTextField" type="search" placeholder="Search" aria-label="Search">
    </div>

    <div class="end-btn">
        <a asp-action="CMSAdd" asp-controller="Admin" asp-area="Admin">
            <button class="btn btn-outline-warning rounded-pill px-3 py-0 me-2"><i class="bi bi-plus-lg "></i> <span class="btn-label">Add</span></button>
        </a>

    </div>
</div>
<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var cms in Model.cmsPages)
        {
            <tr>
                <td>@cms.Title</td>
                <td>@cms.Status</td>

                <td>
                    <span>
                        <a asp-action="CMSEdit" asp-controller="Admin" asp-area="Admin" asp-route-id="@cms.CmsPageId">
                            <button class="btn shadow-none">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                        </a>
                    </span>
                    <span>
                        <a asp-action="CMSDelete" asp-controller="Admin" asp-area="Admin" asp-route-id="@cms.CmsPageId">
                            <button class="btn shadow-none">
                                <i class="bi bi-trash"></i>
                            </button>
                        </a>
                    </span>
                </td>


            </tr>
        }
    </tbody>
</table>


