<div class="fs-4">
    User
</div>

<div class="row">
    <hr class="col-1" style="border: 2px solid black;">
    <hr class="col-11 ">
</div>

<div class="button-row mb-3">
    <div class=" start-btn">

        <input class="form-control me-2" id="myInputTextField" type="search" placeholder="Search" aria-label="Search">
    </div>

    <div class="end-btn">
        <button class="btn btn-outline-warning rounded-pill px-3 py-0 me-2"><i class="bi bi-plus-lg "></i> <span class="btn-label">Add</span></button>

    </div>
</div>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Employee Id</th>
            <th>Department</th>
            <th>Status</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.users)
        {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.EmployeeId</td>
                    <td>@user.Department</td>
                    <td>@user.Status</td>

                    <td>
                        <span>
                            <button class="btn shadow-none">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                        </span>
                        <span>
                            <button class="btn shadow-none">
                                <i class="bi bi-trash"></i>
                            </button>
                        </span>
                    </td>


                </tr>
        }
    </tbody>
</table>


