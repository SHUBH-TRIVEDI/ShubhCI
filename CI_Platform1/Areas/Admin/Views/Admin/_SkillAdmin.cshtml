@using CI_Entities1.Models.ViewModel
@model AdminVM

<div class="fs-4">
    Skills
</div>

<div class="row">
    <hr class="col-1" style="border: 2px solid black;">
    <hr class="col-12">
</div>

<div class="button-row mb-3">
    <div class=" start-btn">

        <input class="form-control me-2" id="myInputTextField" type="search" placeholder="Search" aria-label="Search">
    </div>

    <div class="end-btn">
        <button class="btn btn-outline-warning rounded-pill px-3 py-0 me-2"><i class="bi bi-plus-lg "></i> <span class="btn-label">Add</span></button>

    </div>
</div>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th>Skill Name</th>
            <th>Status</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var skill in Model.skills)
        {
            <tr id="application">
                <td>@skill.SkillName</td>
                <td>@skill.Status</td>
                <td>
                    <span>
                        <button class="btn shadow-none">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                    </span>
                    <span>
                        <button class="btn shadow-none">
                            <i class="bi bi-trash"></i>
                        </button>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
