@model CI_Platform1.Models.LoginModel
<head> <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" ></head>

<div class="container-fluid pl-0">
    <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 g-0" data-bs-ride="carousel" data-bs-interval="4000">
            <partial name="carousel" />
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 col-xs-10
                justify-content-center align-self-center">
            <form asp-controller="Home" asp-action="Login" class="mt-3">
                <div>@ViewBag.Error</div>
                <div class="mb-3 forget">
                    <label asp-for="Email" for="exampleInputEmail1" class="form-label">
                        Email
                        address
                    </label>
                    <input asp-for="Email" type="email" placeholder="Enter Your e-mail"
                           class="form-control shadow-none" required>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <div class="mb-3 mt-3">
                        <label asp-for="Password" for="exampleInputPassword1"
                               class="form-label">Password</label>
                        <input asp-for="Password" type="password" placeholder="Password"
                               class="form-control shadow-none"
                               id="exampleInputPassword1" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center ">
                        <button type="submit" value="login" class="btn
                            btn-outline-success mt-3 shadow-none">
                            Login
                        </button>
                    </div>
                    <div class="text-center mt-1">
                        <a asp-action="Forget" asp-controller="Home" class="text-black  text-decoration-none">Lost Your Password</a>
                    </div>

                    <div class="text-center mt-1">
                        <span>
                            Don't have an
                            account? <a asp-controller="Home" asp-action="Registration" class="text-black text-decoration-none">Create an account</a>
                        </span>
                    </div>
                    <div class=" policy mt-auto mb-5 text-secondary text-center">
                        Privacy
                        Policy
                    </div>
            </form>
        </div>
    </div>
</div>
