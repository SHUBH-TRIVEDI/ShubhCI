@using CI_Entities1.Models.ViewModel
@model StoryShareVM

<div class="container">
    <div class="mt-5 fs-3">
        Volunteering Timesheet
    </div>

    <div class="row mt-3">
        <div class="border col-6">
            <div class="d-flex ">
                <div class="mt-4">Volunteering Hours</div>

                <button type="button" class="btn rounded-pill ms-auto shadow-none oran mt-3" data-bs-toggle="modal"
                        data-bs-target="#staticBackdrop">
                    <i class="bi bi-plus-lg me-2 "></i>ADD
                </button>
                <!-- Modal -->
                <div class="modal  fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                     tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl modal-dialog-centered" style="width: 70%;">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">
                                    Please input below
                                    volunteering Goals
                                </h1>
                                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <form asp-action="Timesheet" asp-controller="Home" method="post">
                                <div class="modal-body">
                                    <div>
                                        <label for="mission">Mission</label>
                                        <select class="col-12" asp-for="MissionId">
                                            @foreach (var mission in Model.missionApplications)
                                            {
                                                @if (@mission.Mission.MissionType == "Time")
                                                {
                                                    <option value="@mission.Mission.MissionId">@mission.Mission.MissionId @mission.Mission.Title</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <label class="mt-4">Date Volunteered</label>
                                    <div>
                                        <input asp-for="DateVolunteered" class="col-12 " type="date" placeholder="Enter Date" />
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <label for="Action" class="mt-4">Hours</label>
                                            <div>
                                                <input asp-for="hour" class="col-12" type="number" min="0" max="23" placeholder="Enter Spent Hours" />
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <label for="Action" class="mt-4">Minutes</label>
                                            <div>
                                                <input asp-for="minute" class="col-12" type="number" min="0" max="59" placeholder="Enter Spent Minutes" />
                                            </div>
                                        </div>
                                    </div>
                                    <label class="mt-4">Message</label>
                                    <div>
                                        <textarea asp-for="Notes" class="col-12" rows="5" placeholder="Enter Your Message"></textarea>
                                    </div>
                                </div>

                                <input type="text" asp-for="TimesheetId" class="form-control shadow-none" id="TimesheetId" aria-describedby="emailHelp" hidden>

                                <div class="modal-footer">
                                    <button type="button" class="btn border-secondary rounded-pill shadow-none"
                                            data-bs-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn oran shadow-none">Submit</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Mission</th>
                        <th scope="col">Date</th>
                        <th scope="col">Hours</th>
                        <th scope="col">Minutes</th>
                        <th scope="col"> </th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.timesheets != null)
                    {
                        @foreach (var sheet in @Model.timesheets)
                        {
                            if (sheet.Mission.MissionType == "Time")
                            {
                                <tr>
                                    <td>@sheet.Mission.Title</td>
                                    <td>@sheet.DateVolunteered</td>
                                    <td>@sheet.TimesheetTime.ToString().Split(":")[0]</td>
                                    <td>@sheet.TimesheetTime.ToString().Split(":")[1]</td>
                                    <td>
                                        <button onclick="edit(@sheet.TimesheetId)" data-bs-toggle="modal"
                                            data-bs-target="#staticBackdrop" class="btn shadow-none">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                    </td>
                                    <td>
                                        <button onclick="deletes(@sheet.TimesheetId)" class="btn shadow-none">
                                            <img src=~/images/bin.png />
                                        </button>
                                    </td>
                                </tr>
                            }
                        }

                    }
                </tbody>
            </table>

        </div>

        <div class="border col-6">
            <div class="d-flex ">
                <div class="mt-4">Volunteering Goals</div>

                <!-- <div class="mt-1 text-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Change Password</div> -->
                <button type="button" class="btn rounded-pill ms-auto shadow-none oran mt-3" data-bs-toggle="modal"
                        data-bs-target="#staticBackdrop2">
                    <i class="bi bi-plus-lg me-2 "></i>ADD
                </button>
                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false"
                     tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">
                                    Please input below
                                    volunteering Goals
                                </h1>
                                <button type="button" class="btn-close shadow-none" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <form asp-action="Timesheet" asp-controller="Home" method="post">
                                <div class="modal-body">
                                    <div>
                                        <label for="mission">Mission</label>
                                        <select class="col-12" asp-for="MissionId">
                                            @foreach (var mission in Model.missionApplications)
                                            {
                                                if (mission.Mission.MissionType == "Goal")
                                                {
                                                    <option value="@mission.Mission.MissionId">@mission.Mission.Title</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <label for="Action" class="mt-4">Actions</label>
                                    <div>
                                        <input asp-for="Action" class="col-12" type="text" placeholder="Enter Actions" />
                                    </div>

                                    <label class="mt-4">Date Volunteered</label>
                                    <div>
                                        <input asp-for="DateVolunteered" class="col-12 " type="date" placeholder="Enter Date" />
                                    </div>

                                    <label class="mt-4">Message</label>
                                    <div>
                                        <textarea asp-for="Notes" class="col-12" rows="5" placeholder="Enter Your Message"></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn border-secondary rounded-pill shadow-none"
                                            data-bs-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="submit" class="btn oran shadow-none">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <table class="table">
                <thead>
                    <tr >
                        <th scope="col">Mission</th>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                        <th scope="col"> </th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.timesheets != null)
                    {
                        @foreach (var sheet in Model.timesheets)
                        {
                            if (sheet.Mission.MissionType == "Goal")
                            {
                                <tr id="del">
                                    <th scope="row">@sheet.Mission.Title</th>
                                    <td>@sheet.DateVolunteered</td>
                                    <td>@sheet.Action</td>
                                    <td>
                                        <button onclick="edit(@sheet.TimesheetId)" class="btn shadow-none">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                    </td>
                                    <td>
                                        <button onclick="deletes(@sheet.TimesheetId)" class="btn shadow-none">
                                            <img src=~/images/bin.png />
                                        </button>
                                    </td>
                                </tr>
                            }

                        }
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>


<script>
    function deletes(id)
    {
        console.log(id);
        $.ajax({
            url: '/Home/Delete',
            type: 'POST',
            data: {'id':id }
            //success: function (res) {
            //    alert("Succesfully Deleted Please Refresh");
            //},
            //error: function (res) {
            //    alert("error");
            //}
        });
            alert("Succesfully Deleted Please Refresh");

    }

    function edit(id)
    {
        //var hiden= document.getElementById("hiden").value= @Model.TimesheetId;

        //console.log(hiden);

        $.ajax({
            url: '/Home/EditTimesheet',
            type: 'GET',
            data: {'id':id },
            success: function (res) {
                $(".modal").html($(res).find(".modal").html());
            },
            error: function (res) {
                alert("error");
            }
        });
    }

</script>