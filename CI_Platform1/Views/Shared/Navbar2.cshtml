@using CI_Entities1.Models.ViewModel
@model LandingPageVM


@*sidebar for filter process*@
<div id="mySidefilter" class="sidefilter d-block d-sm-none">
    <a href="javascript:void(0)" class="closebtn float-start" onclick="closeFilter()"><img src="~/images/left.png" /></a>
    <ul class="navbar-nav px-3">
        <li class="px-1">
            <button class="btn dropdown-toggle d-inline-flex justify-content-between align-items-center" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                <span>Country</span>
                <img src="~/images/drop-down.png" />
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" onchange="mysearch()" style="height:140px; width:max-content; overflow-y: auto;">
                @foreach (var i in Model.countries)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <input class="form-check-input theme" name="country" type="checkbox" value="@i.Name" id="Checkme1" />
                                <label class="form-check-label" for="Checkme1">@i.Name</label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </li>

        <li class="px-1">
            <button class="btn dropdown-toggle d-inline-flex justify-content-between align-items-center" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                <span>City</span>
                <img src="~/images/drop-down.png" />
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" onchange="mysearch()" style="height:140px; width:max-content; overflow-y: auto;">
                @foreach (var i in Model.cities)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <input class="form-check-input theme" name="city" type="checkbox" value="@i.Name" id="Checkme1" />
                                <label class="form-check-label" for="Checkme1">@i.Name</label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </li>

        <li class="px-1">
            <button class="btn dropdown-toggle d-inline-flex justify-content-between align-items-center" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                <span>Theme</span>
                <img src="~/images/drop-down.png" />
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" onchange="mysearch()" style="height:140px; width:max-content; overflow-y: auto;">
                @foreach (var i in Model.missionThemes)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <input class="form-check-input theme" name="theme" type="checkbox" value="@i.Title" id="Checkme1" />
                                <label class="form-check-label" for="Checkme1">@i.Title</label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </li>

        <li class="px-1">
            <button class="btn dropdown-toggle d-inline-flex justify-content-between align-items-center" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                <span>Skill</span>
                <img src="~/images/drop-down.png" />
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" onchange="mysearch()" style="height:140px; width:max-content; overflow-y: auto;">
                @foreach (var i in Model.skills)
                {
                    <li>
                        <a class="dropdown-item" href="#">
                            <div class="form-check">
                                <input class="form-check-input theme" name="skill1" type="checkbox" value="@i.SkillName" id="Checkme1" />
                                <label class="form-check-label" for="Checkme1">@i.SkillName</label>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </li>

    </ul>
</div>

@*main contant for search and filter*@
<div class="border-top">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 px-0">
                <form oninput='mysearch()' asp-action="LandingPage" asp-controller="Home" id="searchform">
                    <div class="input-group rounded ">
                        <label class="input-group-text border-0 bg-transparent search-icon px-0" for="search-addon">
                            <img src="~/images/search.png" />
                        </label>
                        <input onkeyup="mysearch()" id="search-addon" name="searchText" type="search" class="searchbar form-control rounded border-0 fs-5 btn-outline-light" placeholder="Search mission..." />
                        <div class="d-inline-flex align-items-center px-3"><img class="d-sm-none d-block" onclick="openFilter()" src="~/images/filter.png" /></div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 mt-lg-0 mt-md-3 mt-sm-3   filter-area d-sm-block d-none">
                <div class="row h-100">
                    <div class="btn-group filter-dropdown dropdown col-sm-3 border px-0">
                        <button class="btn dropdown-toggle d-inline-flex justify-content-between align-items-center" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <span>Country</span>
                            <img src="~/images/drop-down.png" />
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1" onchange="mysearch()" style="height:140px; width:max-content; overflow-y: auto;">
                            @foreach (var i in Model.countries)
                            {
                                <li>
                                    <a class="dropdown-item" href="#">
