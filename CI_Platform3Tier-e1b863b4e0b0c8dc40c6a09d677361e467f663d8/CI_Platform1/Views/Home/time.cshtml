@using CI_Entities1.Models.ViewModel
@model StoryShareVM

<partial name="Navbar1" />
<style>
    td {
        border: none;
    }
</style>

@*<body class="m-3">*@

<main class="container">

    <h2 class="mt-5">Volunteering Timesheet</h2>

    <div class="d-flex" style="margin:auto">

        <div class="m-4 p-3 shadow-sm">
            <div class="d-flex justify-content-between">
                <h4>Volunteering Hours</h4>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#exampleModal1">
                    <i class="bi bi-plus-lg"></i>Add
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered ">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Please input below Volunteering Hours</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form class="mx-3">
                                <div class="modal-body">



                                    <div>Select Mission</div>
                                    <div class="mb-3">
                                        <select class="form-select" id="missionselected" name="missionSelected">
                                            <option value="0">Select mission</option>

                                            @foreach (var mission in @Model.missionApplications)
                                            {
                                                if (@mission.Mission.MissionType == "Time")
                                                {
                                                    <option value="@mission.MissionId">@mission.Mission.Title</option>
                                                }
                                            }
                                        </select>

                                        <label for="date" class="form-label mb-0"> Date Volunteered</label>
                                        <input class="form-control" type="date" placeholder="Select Date" name="date" id="dateTimeBased" />

                                        <div class="row">
                                            <div class="col">
                                                <label for="hours" class="form-label mb-0"> Hours</label>
                                                <input class="form-control" type="number" placeholder="Enter spent hours" name="hours" min="0" max="24" />
                                            </div>

                                            <div class="col">
                                                <label for="minutes" class="form-label mb-0">Minutes</label>
                                                <input class="form-control" type="number" placeholder="Enter spent minutes" name="minutes" min="0" max="60" />
                                            </div>
                                        </div>
                                        <label for="message" class="form-label mb-0">Message</label>

                                        <textarea class="form-control" aria-label="With textarea" placeholder="Enter your message" name="message"></textarea>



                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-outline-danger rounded-pill" asp-controller="VolunteeringTimesheet" asp-action="storeData">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Mission</th>
                        <th scope="col">Date</th>
                        <th scope="col">Hours</th>
                        <th scope="col">Minutes</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Environment Conservation</td>
                        <td>22/02/2022</td>
                        <td>1h</td>
                        <td>30 min</td>
                        <td><i class="bi bi-pencil-square" style="color:orange"></i>&nbsp; &nbsp;<i class="bi bi-trash"></i></td>
                    </tr>
                    <tr>
                        <td>Environment Conservation</td>
                        <td>22/02/2022</td>
                        <td>1h</td>
                        <td>30 min</td>
                        <td><i class="bi bi-pencil-square" style="color:orange"></i>&nbsp; &nbsp;<i class="bi bi-trash"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="m-4 p-3 shadow-sm">
            <div class="d-flex justify-content-between">
                <h4>Volunteering Goals</h4>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-danger rounded-pill" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="bi bi-plus-lg"></i>Add
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered ">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Please input below Volunteering Goals</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form class="mx-3">


                                    <div>Select Mission</div>
                                    <div class="mb-3">
                                        <select class="form-select col-11 heigh" id="missionselected1" name="missionSelected1">
                                            <option value="0">Select mission</option>

                                            @foreach (var mission in @Model.missionApplications)
                                            {
                                                if (@mission.Mission.MissionType == "Goal")
                                                {
                                                    <option value="@mission.MissionId">@mission.Mission.Title</option>
                                                }
                                            }
                                        </select>

                                        <label for="action" class="form-label mb-0"> Actions</label>
                                        <input class="form-control" type="text" placeholder="Enter Actions" name="action" />

                                        <label for="date" class="form-label mb-0"> Date Volunteered</label>
                                        <input class="form-control" type="date" placeholder="Select Date" name="date" min="@Model." />


                                        <label for="message" class="form-label mb-0">Message</label>

                                        <textarea class="form-control" aria-label="With textarea" placeholder="Enter your message" name="message"></textarea>



                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-outline-danger rounded-pill" asp-controller="VolunteeringTimesheet" asp-action="">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Mission</th>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Environment Conservation</td>
                        <td>22/02/2022</td>
                        <td>0</td>
                        <td><i class="bi bi-pencil-square" style="color:orange"></i>&nbsp; &nbsp;<i class="bi bi-trash"></i></td>
                    </tr>
                    <tr>
                        <td>Environment Conservation</td>
                        <td>22/02/2022</td>
                        <td>1</td>
                        <td><i class="bi bi-pencil-square" style="color:orange"></i>&nbsp; &nbsp;<i class="bi bi-trash"></i></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</main>
<script>
    $(document).on('change', '#missionselected', function () {
                  var optionValue = $(this).val();
           console.log(optionValue);
           $.ajax({
             type: 'POST',
             url: '/VolunteeringTimesheet/GetDate',
             data: {missionSelected: optionValue},
            success: function(data) {

                 $("#dateTimeBased").attr("min",data.sd);
                 $("#dateTimeBased").attr("max",data.ed);

                 console.log(data.sd);
                 console.log(data.ed);
            }
         });
       });

</script>