@model CI_Platform1.Models.Resetpassword
<head>
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />
</head>
<div class="container-fluid pl-0">
    <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12" data-bs-ride="carousel" data-bs-interval="4000">
            <partial name="carousel" />
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 col-xs-10
                justify-content-center align-self-center">


            <form asp-action="Resetpass" asp-controller="Home">
                <div class="text-center">
                    <p>New Password</p>
                    <span>Please enter new password in the fields below.</span>
                </div>
                <input type="email" asp-for="Email" class="form-control shadow-none" id="exampleInputEmail1" aria-describedby="emailHelp" hidden>

                <input type="text" asp-for="Token" class="form-control shadow-none" id="exampleInputEmail1" aria-describedby="emailHelp" hidden>
                <div class="mt-3">
                    <label asp-for="Password" class="form-label">New Password</label>
                    <input asp-for="Password" type="password" class="form-control shadow-none" id="exampleInputPassword1" placeholder="Enter password" required />
                </div>

                <div class="mt-3">
                    <label asp-for="ConfirmPassword" for="exampleInputPassword1" class="form-label">Confirm new Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control shadow-none" id="exampleInputPassword1" placeholder="confirm password" required />
                </div>
                <div class="mt-3">
                    <input type="Submit" value="Change Password" class="btn mt-3 shadow-none">
                </div>
                <div class="text-center mt-2">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                </div>
                <div class="text-center position-absolute bottom-0 end-0">
                    Privacy Policy
                </div>
            </form>
        </div>
    </div>
</div>
